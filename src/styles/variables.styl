// 颜色变量
$primary = #3b82f6
$primary-dark = #2563eb
$success = #10b981
$danger = #ef4444
$warning = #f59e0b

// 背景颜色
$bg-primary = #0f172a
$bg-secondary = #1e293b
$bg-tertiary = #334155

// 文字颜色
$text-primary = #f8fafc
$text-secondary = #cbd5e1
$text-muted = #94a3b8

// 边框颜色
$border-primary = #475569
$border-secondary = #64748b

// 间距
$spacing-xs = 4px
$spacing-sm = 8px
$spacing-md = 16px
$spacing-lg = 24px
$spacing-xl = 32px

// 圆角
$radius-sm = 4px
$radius-md = 6px
$radius-lg = 8px
$radius-xl = 12px

// 字体大小
$font-xs = 12px
$font-sm = 14px
$font-base = 16px
$font-lg = 18px
$font-xl = 20px
$font-2xl = 24px
$font-3xl = 30px

// 阴影
$shadow-sm = 0 1px 2px rgba(0, 0, 0, 0.05)
$shadow-md = 0 4px 6px rgba(0, 0, 0, 0.1)
$shadow-lg = 0 10px 15px rgba(0, 0, 0, 0.1)
$shadow-xl = 0 20px 25px rgba(0, 0, 0, 0.15)
