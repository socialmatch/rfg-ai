// 自定义样式
html, body
  height 100vh
  overflow-x hidden
  overflow-y auto

body
  font-family 'JetBrains Mono', monospace
  background #0f172a
  color #f8fafc

// 滚动条样式
::-webkit-scrollbar
  width 8px
  height 8px

::-webkit-scrollbar-track
  background #1e293b

::-webkit-scrollbar-thumb
  background #475569
  border-radius 4px

::-webkit-scrollbar-thumb:hover
  background #64748b

// 自定义组件样式
.price-card
  background linear-gradient(135deg, #1e293b 0%, #334155 100%)
  border 1px solid #475569
  transition all 0.3s ease

  &:hover
    border-color #3b82f6
    transform translateY(-2px)
    box-shadow 0 10px 25px rgba(59, 130, 246, 0.15)

.status-indicator
  width 8px
  height 8px
  border-radius 50%
  display inline-block
  margin-right 8px

.status-connecting
  background #f59e0b
  animation pulse 2s infinite

.status-connected
  background #10b981

.status-disconnected
  background #ef4444

// 图表容器
.chart-container
  background #1e293b
  border 1px solid #475569
  border-radius 8px
  padding 20px

// 按钮样式
.btn-primary
  background linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)
  border none
  color white
  padding 12px 24px
  border-radius 6px
  font-weight 600
  cursor pointer
  transition all 0.3s ease

  &:hover
    transform translateY(-1px)
    box-shadow 0 5px 15px rgba(59, 130, 246, 0.3)

  &:active
    transform translateY(0)

// 输入框样式
.input-field
  background #1e293b
  border 1px solid #475569
  color #f8fafc
  padding 12px 16px
  border-radius 6px
  font-family 'JetBrains Mono', monospace

  &:focus
    outline none
    border-color #3b82f6
    box-shadow 0 0 0 3px rgba(59, 130, 246, 0.1)

// 表格样式
.table-container
  background #1e293b
  border 1px solid #475569
  border-radius 8px
  overflow hidden

.table-header
  background #334155
  color #f8fafc
  font-weight 600
  padding 16px

.table-row
  border-bottom 1px solid #475569
  transition background 0.2s ease

  &:hover
    background #334155

  &:last-child
    border-bottom none
